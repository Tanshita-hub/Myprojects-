 printf("6. MINI STATEMENT\t\t\n");
 scanf("%d",&ch);
 switch(ch)
 { case 1: fastcash(l,n,i);
    break;
    case 2: deposit(l,n,m,o,i);
    break;
    case 3:withdrawal(l,n,i);
    break;
