  void swithdrawl(int l,int n,int j)
  { int i,k;
  int amount;
  printf("\033[2J\033[H");
 printf("\t\t HYT\n\n");
  printf("\t Please Enter Amount\n");
  scanf("%d",&amount);
  if(amount%100!=0)
  {printf("\033[2J\033[H");
 printf("\t\t HYT\n\n");
   printf("\t Invalid amount to withdraw\n");
  sleep(4);
  printf("\033[2J\033[H");
  printf("\t\t HYT\n\n");
  printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
      sleep(4);}
  if(amount%100==0&&amount<=l)
  { printf("\033[2J\033[H");
 printf("\t\t HYT\n\n");
    printf("  Your Transaction is being Processed.\n");
     printf("\t\tPlease Wait..\n");
     sleep(4);

  printf("\033[2J\033[H");
 printf("\t\t HYT\n\n");
     printf("Please Collect Cash and Take Your Card\n");
     i=l-amount;
     sleep(4);
    printf("\033[2J\033[H");
   printf("\t\t HYT\n\n");
    printf("Would You Like to Display the Balance on Screen\n");
     printf("\t\t\t\t1. Yes\n");
     printf("\t\t\t\t2. No\n");
     scanf("%d",&k);
    printf("\033[2J\033[H");
   printf("\t\t HYT\n\n");
      if(k==1)
     { printf("\tTransaction Complete\n\n");
     printf("\t Available Balance is %d\n",i);
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
     printf("\t\tThank You Visit Again\n");
     sleep(4);
     }
     else{
  printf("\033[2J\033[H");
 printf("\t\t HYT\n\n");
     printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
      sleep(4);}}
      else if(amount>l)
      {printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
       printf("\t Insufficient Bank Balance\n");
       sleep(4);
       printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
      sleep(4);}
      else
      { printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
      printf("Entered Invalid Amount\n");
      printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
     printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
      sleep(4);}
      main();}
      void pin(int n,int m,int o,int i)
      { int l,k,t;
      printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
       printf("  Please Enter Your Account Number\n");
       scanf("%d",&l);
       if(l==m)
       { printf("\033[2J\033[H");
      printf("\t\t HYT\n\n");
    printf("  Your Transaction is being Processed.\n");
     printf("\t\tPlease Wait..\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
     printf(" Check OTP on Your Registered Mobile No.\n");
     printf("  If Received, Press Continue\n\n");
     printf("\t\t\t 1. Continue\n\n");
     printf("\t\t\t 2. Resend OTP\n\n");
     printf("\t\t\t 3. Cancel\n");
     scanf("%d",&k);
     switch(k){
     case 1:
      otp(n,m,o,i);
     break;
      case 2:
     otp(n,m,o,i);
     break;
     case 3:
      printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
     printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
      sleep(4);
      break;}}
      else{ printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
      printf("  You Entered Wrong Account Number\n");
      sleep(4);
      printf("\033[2J\033[H");
     printf("\t\t HYT\n\n");
      printf("\t\t Please Try Again!\n");
      sleep(3);
      pin(n,m,o,i);
      }}
     void otp(int n,int m,int o,int l){
      int t,new,i,k,f;
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
        printf("Please Enter 4 digits OTP Received Over SMS.\n");
        scanf("%d",&t);
        if(t==o)
        { printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
        printf("\t Please Enter Your 4-digit Old Pin\n");
        scanf("%d",&k);
        if(k==n){
        printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
        printf("\tPlease Enter Your 4-digit New Pin\n");
        scanf("%d",&new);
        i=new/1000;
        if(1<=i&&i<=9)
        {  printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
        printf("\t Please ReEnter New Pin\n");
          scanf("%d",&f);
          if(f==new)
          {
          printf("\033[2J\033[H");
         printf("\t\t HYT\n\n");
    printf("  Your Transaction is being Processed.\n");
     printf("\t\tPlease Wait..\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
     printf("\t   Transaction Complete\n");
     sleep(3);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
     printf("\tPlease Take Your Card\n");
     sleep(4);
     printf("\033[2J\033[H");
    printf("\t\t HYT\n\n");
      printf("\t\tThank You Visit Again\n");
     n=new;
     s[l].pin=new;
      main();
     }
     else{ printf("\t You Entered Wrong NewPin\n");
     sleep(4);
     printf("\t\t Try Again!\n");
     sleep(4);
     otp(n,m,o,l);
      }}
        else
        {printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
         printf("Pin Should Contain Only 4-Digits\n");
         sleep(4);
         printf("\t\t Try Again!\n");
         sleep(4);
         otp(n,m,o,l);}
         }
        else{ printf("\033[2J\033[H");
       printf("\t\t HYT\n");
        printf("\t You Entered Wrong Pin\n");
        sleep(3);
        printf("\t\t Try Again!\n");
        otp(n,m,o,l);}}
        else
        { printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
        printf("\t You Entered Wrong OTP\n");
        sleep(3);
        printf("\033[2J\033[H");
       printf("\t\t HYT\n\n");
        printf("\t\tTry Again!\n");
        sleep(3);
        otp(n,m,o,l);}}
